@model GeniusWebApp.Models.GroupPost
@{
    ViewBag.Title = "CreateGroupPost";
    TempData.Clear();
    TempData.Add("GroupId", ViewBag.GroupId);
}

<h2>Create a group post</h2>

@using (Html.BeginForm("CreateGroupPost", "UserPost"))
{
    <div class="form-group">
        @Html.LabelFor(group => group.Title)
        @Html.TextBoxFor(group => group.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(group => group.Content)
        @Html.TextBoxFor(group => group.Content, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Content, "", new { @class = "text-danger" })
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
}